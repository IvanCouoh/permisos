<%- include ../layout/backOffice/header.ejs %>
  <div class="container" style="margin-top: 75px;">
   
    <br /><br />
    <h2>Nuevo usuario</h2>
    <form action="/usuarios" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="my-input">Nombre:</label>
        <input class="input__login height" type="text" placeholder="Nombre del usuario" name="nombre" required />
      </div>
      <div class="form-group">
        <label for="my-input">Email:</label>
        <input id="my-input" class="input__login height" type="email" placeholder="Ej. juan@gmail.com" name="email"
          required />
      </div>
      <div class="form-group">
        <label for="my-input">Contraseña:</label>
        <input id="my-input" class="input__login height" type="password" name="pass" required />
      </div>
      <div class="form-group">
        <label for="my-input">Imagen:</label><br />
        <input id="my-input" class="form-control-file" type="file" name="imagen" required />
      </div>
      <br>
      <div class="form-group">
        <label for="my-input">Permisos:</label><br />
        <div>
          <input id="my-input" class="form-check-input" type="checkbox" value="inicio" name="inicio" />
          <label for="">Sección de inicio</label>
        </div>

        <div>
          <input id="my-input" class="form-check-input" type="checkbox" value="fotos" name="fotos" />
          <label for="fotos">Sección de fotos</label>
        </div>

        <div>
          <input id="my-input" class="form-check-input" type="checkbox" value="ilustraciones" name="ilustraciones" />
          <label for="ilustraciones">Sección de ilustraciones</label>
        </div>

        <div>
          <input id="my-input" class="form-check-input" type="checkbox" value="juegosdemesa" name="juegosdemesa" />
          <label for="juegosdemesa">Sección de juedos de mesa</label>
        </div>

        <div>
          <input id="my-input" class="form-check-input" type="checkbox" value="videojuegos" name="videojuegos" />
          <label for="videojuegos">Sección de videojuegos</label>
        </div>
      </div>
      <br />
      <button type="submit" class="btn btn-primary">Guardar</button>
      <a href="/usuarios/" class="btn btn-danger">Cancelar</a>
    </form>
    <br>
    <br>
  </div>
  <%- include ../layout/backOffice/footer.ejs %>